<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    tools:context=".activities.MainActivity">

<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_above="@+id/random_anim_btn"
    android:layout_marginBottom="5dp"
    android:id="@+id/animation_recycler_view"/>

    <Button
        android:id="@+id/random_anim_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:textSize="@dimen/small_size"
        android:textAllCaps="false"
        android:text="Random Anim" />

    <Button
        android:id="@+id/normal_anim_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textSize="@dimen/small_size"
        android:text="Normal Anim" />

    <Button
        android:id="@+id/reverse_anim_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="5dp"
        android:textSize="@dimen/small_size"
        android:layout_marginBottom="0dp"
        android:textAllCaps="false"
        android:layout_toStartOf="@+id/normal_anim_btn"
        android:layout_toEndOf="@+id/random_anim_btn"
        android:text="Reverse Anim" />

</RelativeLayout>